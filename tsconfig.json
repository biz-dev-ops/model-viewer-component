{
    "compilerOptions": {
        "target": "es2017",
        "module": "es2015",
        "lib": ["es2017", "dom"],
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "inlineSources": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitOverride": true,
        "plugins": [
          {
            "name": "ts-lit-plugin",
            "strict": true
          }
        ]
      },
      "include": ["src/**/*.ts"],
      "exclude": []
}